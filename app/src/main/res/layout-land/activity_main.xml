<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <!-- Ліва зона: велика прозора кнопка -->
    <FrameLayout
        android:id="@+id/topTouchArea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <mda.sport.tempomator.CircleMatrixView
            android:id="@+id/circleMatrixView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Прозора кнопка над колами -->
        <Button
            android:id="@+id/startStopButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="false"
            android:text="@string/button_start_stop"
            android:textColor="@color/design_default_color_primary_dark" />
    </FrameLayout>

    <!-- Середня зона: 4 маленькі вертикальні кола -->
    <LinearLayout
        android:id="@+id/beatLine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <mda.sport.tempomator.CircleBeatView
            android:id="@+id/circleBeatView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--
        <View
            android:id="@+id/beatOver1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/beatOver2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/beatOver3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/beatOver4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/circle_gray" />
        -->
    </LinearLayout>

    <!-- Права зона: BPM + повзунок -->
    <LinearLayout
        android:id="@+id/bpmControl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/bpmRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="BPM: 120"
            android:textAlignment="center"
            android:textSize="14sp" />

        <mda.sport.tempomator.VerticalSeekBar
            android:id="@+id/bpmSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:min="30"
            android:max="240"
            android:progress="120"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
